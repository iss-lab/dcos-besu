{
  "type": "object",
  "properties": {
    "service": {
      "type": "object",
      "description": "DC/OS service configuration properties",
      "properties": {
        "name": {
          "description": "The name of the service instance",
          "type": "string",
          "default": "besu",
          "title": "Service name"
        },
        "user": {
          "description": "The user that the service will run as.",
          "type": "string",
          "default": "root",
          "title": "User"
        },
        "service_account": {
          "description": "The service account for DC/OS service authentication. This is typically left empty to use the default unless service authentication is needed. The value given here is passed as the principal of Mesos framework.",
          "type": "string",
          "default": ""
        },
        "service_account_secret": {
          "description": "Name of the Secret Store credentials to use for DC/OS service authentication. This should be left empty unless service authentication is needed.",
          "type": "string",
          "default": "",
          "title": "Credential secret name (optional)"
        },
        "virtual_network_enabled": {
          "description": "Enable virtual networking",
          "type": "boolean",
          "default": false
        },
        "virtual_network_name": {
          "description": "The name of the virtual network to join",
          "type": "string",
          "default": "dcos"
        },
        "virtual_network_plugin_labels": {
          "description": "Labels to pass to the virtual network plugin. Comma-separated key:value pairs. For example: k_0:v_0,k_1:v_1,...,k_n:v_n",
          "type": "string",
          "default": ""
        },
        "log_level": {
          "description": "The log level for the DC/OS service.",
          "type": "string",
          "enum": [
            "OFF",
            "FATAL",
            "ERROR",
            "WARN",
            "INFO",
            "DEBUG",
            "TRACE",
            "ALL"
          ],
          "default": "INFO"
        },
        "sleep": {
          "description": "The sleep duration in seconds before tasks exit.",
          "type": "number",
          "default": 1000
        }
      },
      "required": [
        "name",
        "sleep",
        "user"
      ]
    },
    "node": {
      "description": "besu pod configuration properties",
      "type": "object",
      "properties": {
        "count": {
          "title": "Node count",
          "description": "Number of besu pods to run",
          "type": "integer",
          "default": 1
        },
        "placement_constraint": {
          "title": "Placement constraint",
          "description": "Placement constraints for nodes. Example: [[\"hostname\", \"UNIQUE\"]]",
          "type": "string",
          "default": "[[\"hostname\", \"UNIQUE\"]]",
          "media": {
            "type": "application/x-zone-constraints+json"
          }
        },
        "cpus": {
          "title": "CPU count",
          "description": "besu pod CPU requirements",
          "type": "number",
          "default": 1
        },
        "mem": {
          "title": "Memory size (MB)",
          "description": "besu pod mem requirements (in MB)",
          "type": "integer",
          "default": 1024
        },
        "disk": {
          "title": "Disk size (MB)",
          "description": "besu pod persistent disk requirements (in MB)",
          "type": "integer",
          "default": 1024
        },
        "disk_type": {
          "title": "Disk type [ROOT, MOUNT]",
          "description": "Mount volumes require preconfiguration in DC/OS",
          "enum": [
            "ROOT",
            "MOUNT"
          ],
          "default": "ROOT"
        }
      },
      "required": [
        "count",
        "cpus",
        "mem",
        "disk",
        "disk_type"
      ]
    },
    "bootnode": {
      "description": "besu bootnode pod configuration properties, some properties inherited from node.*",
      "type": "object",
      "properties": {
        "count": {
          "title": "Node count",
          "description": "Number of besu bootnode pods to run, should be 0 or 1",
          "type": "integer",
          "default": 1
        },
        "placement_constraint": {
          "title": "Placement constraint",
          "description": "Placement constraints for nodes. Example: [[\"hostname\", \"UNIQUE\"]]",
          "type": "string",
          "default": "[[\"hostname\", \"UNIQUE\"]]",
          "media": {
            "type": "application/x-zone-constraints+json"
          }
        }
      },
      "required": [
        "count"
      ]
    },
    "besu": {
      "description": "besu configuration properties",
      "type": "object",
      "properties": {
        "PORT_P2P": { "title": "PORT_P2P", "description": "PORT_P2P", "type": "string", "default": "30303" },
        "PORT_HTTP": { "title": "PORT_HTTP", "description": "PORT_HTTP", "type": "string", "default": "8545" },
        "PORT_WS": { "title": "PORT_WS", "description": "PORT_WS", "type": "string", "default": "8546" },
        "PORT_GRAPHQL": { "title": "PORT_GRAPHQL", "description": "PORT_GRAPHQL", "type": "string", "default": "8547" },
        "PORT_METRICS": { "title": "PORT_METRICS", "description": "PORT_METRICS", "type": "string", "default": "9545" },
        "BESU_CONFIG_TOML_BASE64": { "title": "BESU_CONFIG_TOML_BASE64", "description": "BESU_CONFIG_TOML_BASE64", "type": "string" },
        "BESU_CONFIG_GENESIS_BASE64": { "title": "BESU_CONFIG_GENESIS_BASE64", "description": "BESU_CONFIG_GENESIS_BASE64", "type": "string" },
        "BESU_PRIVATE_KEY_ARRAY_BASE64": { "title": "BESU_PRIVATE_KEY_BASE64", "description": "Base64 encoded JSON array of private keys, the array length should match the node.count", "type": "string" },
        "BESU_PUBLIC_KEY_ARRAY_BASE64": { "title": "BESU_PUBLIC_KEY_BASE64", "description": "Base64 encoded JSON array of public keys, the array length should match the node.count", "type": "string" },
        "BESU_BOOTNODE_PUBLIC_KEY_BASE64": { "title": "BESU_BOOTNODE_PUBLIC_KEY_BASE64", "description": "BESU_BOOTNODE_PUBLIC_KEY_BASE64", "type": "string" },
        "BESU_BOOTNODE_P2P_ADDRESS": { "title": "BESU_BOOTNODE_P2P_ADDRESS", "description": "BESU_BOOTNODE_P2P_ADDRESS", "type": "string" },
        "BESU_CONFIG_DIRECTORY": { "title": "BESU_CONFIG_DIRECTORY", "description": "BESU_CONFIG_DIRECTORY", "type": "string", "default": "/mnt/mesos/sandbox/besu/config/" },
        "BESU_KEYS_DIRECTORY": { "title": "BESU_KEYS_DIRECTORY", "description": "BESU_KEYS_DIRECTORY", "type": "string", "default": "/mnt/mesos/sandbox/besu/keys/" },
        "BESU_PUBLIC_KEY_DIRECTORY": { "title": "BESU_PUBLIC_KEY_DIRECTORY", "description": "BESU_PUBLIC_KEY_DIRECTORY", "type": "string", "default": "/mnt/mesos/sandbox/besu/public-keys/" }
      },
      "required": [
        "PORT_P2P"
      ]
    }
  }
}